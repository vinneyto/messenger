<div class="popup {{cs.signIn}}">
  <h1 class="popup-title">Sign in</h1>

  <form class="{{cs.signInForm}}">
    <div class="{{cs.inputGroups}}">
      {{> inputGroup id="login" label="Login" type="text"}}
      {{> inputGroup id="password" label="Password" type="password"}}
    </div>
    {{> button label="Sign in"}}
    {{> linkButton label="Don't have an account?" className=cs.signUpLink href="/sign-up"}}
  </form>
</div>