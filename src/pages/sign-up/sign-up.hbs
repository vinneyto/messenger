<div class="popup {{ cs.signUp }}">
  <h1 class="popup-title">Sign up</h1>

  <form class="{{ cs.signUpForm }}" action="" method="get">
    {{> inputGroup id="email" name="email" label="Email" type="email"}}
    {{> inputGroup id="login" name="login" label="Login" type="text"}}

    {{> inputGroup id="first_name" name="first_name" label="First name" type="text"}}
    {{> inputGroup id="second_name" name="second_name" label="Last name" type="text"}}

    {{> inputGroup id="phone" name="phone" label="Phone" type="text"}}

    {{> inputGroup id="password" name="password" label="Password" type="password" inputClassName=cs.inputPasswordError}}
    {{> inputGroup
        id="confirmPassword"
        name="confirmPassword"
        label="Confirm password"
        type="password"
        errorMessage="Passwords don't match" }}

    {{> button label="Create account" className=cs.submitButton type="submit"}}
    {{> linkButton label="Sign in" className=cs.signUpLink href="/sign-in"}}
  </form>
</div>
