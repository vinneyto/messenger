<div class="{{cs.inputGroup}} {{className}}">
  <label class="{{cs.label}}" for="{{id}}">
    {{label}}
  </label>
  {{> input id=id name=name placeholder=label type=type className=inputClassName}}
  {{#if errorMessage}}
    <div class="{{cs.errorMessage}}">
      {{errorMessage}}
    </div>
  {{/if}}
</div>